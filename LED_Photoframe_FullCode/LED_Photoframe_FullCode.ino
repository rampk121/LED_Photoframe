void loop() {

    run_linear_rainPalette();                                                       //Run the linear LED pattern 
    long irValue = particleSensor.getIR();

      
        if (checkForBeat(irValue) == true)                                        //Check if MAX30102 detects a beat
        {
        //We sensed a beat!
        counter++;
         long delta = millis() - lastBeat;
          lastBeat = millis();

          beatsPerMinute = 60 / (delta / 1000.0);                                //Calculate BPM

          if (beatsPerMinute < 255 && beatsPerMinute > 40)
          {
            rates[rateSpot++] = (byte)beatsPerMinute; //Store this reading in the array
            rateSpot %= RATE_SIZE; //Wrap variable

            //Take average of readings
            beatAvg = 0;
            for (byte x = 0 ; x < RATE_SIZE ; x++)
            beatAvg += rates[x];
            beatAvg /= RATE_SIZE;
          }

          if (counter < 6)
          {
            testdrawlistening();                                        //While the average BPM is being calculated draw the listening OLED image
            
          }
          else{

            heart_enable = true;																				//Switch to heart LED pattern if the more than 6 BPM averages have been calculated
            linear_enable = false;
            bpm = beatAvg;
            display.clearDisplay();
            display.drawBitmap(0,0, big_heart, 128, 64, 1);						//Draw the beating heart OLED animation and display the average BPM
            display.display();
            display.clearDisplay();
            display.drawBitmap(0,0, pulse_heart, 128, 64, 1);
            display.setTextSize(3);
            display.setTextColor(WHITE);
            display.setCursor(70, 5);
            display.println("BPM");                                   
            display.setCursor(70, 30);
            display.println(beatAvg);                               //Display the average BPM calculated from the sensor readings
            display.display();
            
          }

        }  


  if (irValue < 50000)                                             //If no finger detected display the solid heart OLED image
   { 
    // Serial.print(" No finger?");
    counter = 0;
    heart_enable = false;																					//Disable the heart LED pattern and switch to linear rain LED pattern
    linear_enable = true;																			
    testdrawsolid();
   }

  // Serial.println();
  run_linear_rainPalette();																				//Function to run the linear rain LED pattern
  run_heart_SinBeatPalette();																			//Function to run the heart LED pattern

}

void run_linear_rainPalette()                    
{
  if (linear_enable==true)
  {
  uint8_t sinBeat = beatsin8(60, 0, 255, 0, 0);                                    //creating a sine wave at 60bpm
  CRGBPalette16 Pal = purplePalette;

  assign_linear(linearC, Pal, colorIndexC, sinBeat, startC);											//passing each linear row to the assign_linear function to assign the color and brightness of each LED
  assign_linear(linearE, Pal, colorIndexE, sinBeat, startE);
  assign_linear(linearG, Pal, colorIndexG, sinBeat, startG);
  assign_linear(linearI, Pal, colorIndexI, sinBeat, startI);
  assign_linear(linearK, Pal, colorIndexK, sinBeat, startK);
  assign_linear(linearM, Pal, colorIndexM, sinBeat, startM);

  EVERY_N_MILLISECONDS(200){																										//update the start index every 200 milliseconds
      startC = update_start(startC);
      startE = update_start(startE);
      startG = update_start(startG);
      startI = update_start(startI);
      startK = update_start(startK);
      startM = update_start(startM);
      fadeToBlackBy(leds, NUM_LEDS, 100);																			//Fade the brightness of the LEDs by 100
  }
    //BLUR
  EVERY_N_MILLISECONDS(1){																										//Apply Blur filter to LEDs every 1 millisecond
    for (int i =0; i<1; i++)
    {
      blur1d(leds, NUM_LEDS, 3);
    }
  }
 
  FastLED.show();																															//Show the LEDs
  }
}

void run_heart_SinBeatPalette()
{
  if (heart_enable == true)
  {
  uint8_t sinBeat1 = beatsin8(bpm, 0, 255, 0, 0);                           //Create a sine wave with the calculated bpm from the heartrate sensor for the large heart shape

  for (int i =0; i< heart1_size; i++)
  {
