  }

  uint8_t sinBeat2 = beatsin8(bpm, 0, 255, 0, 127);                        //Create a sine wave with the calculated bpm from the heartrate sensor and a phase offset for the small heart shape 

  for (int i =0; i< heart3_size; i++)
  {
    leds[heart3[i]]= ColorFromPalette(myPal2, colorIndex3[i], sinBeat2);  //controlling Brightness with sinBeat and assigning each LED with a color from the Palette
  }

  EVERY_N_MILLISECONDS(5){                                                //Change the color index every 5 millisecond to randomize the result
    for (int i =0; i<heart1_size; i++)
    {
      colorIndex1[i]++;
    }
    for (int i =0; i<heart3_size; i++)
    {
      colorIndex3[i]++;
    }

  }
    //BLUR
  EVERY_N_MILLISECONDS(1){																							//Apply Blur filter to LEDs every 1 millisecond
    for (int i =0; i<4; i++)
    {
      blur1d(leds, NUM_LEDS, 3);
    }
  }
  FastLED.show();																											//Show the LEDs
  }
}


void assign_linear(int linear[], CRGBPalette16 Pal, uint8_t colorIndex[], uint8_t sinBeat, int start)
{
  int inc = 2;
  for (int i =start; i< start+inc; i++)
  {
    leds[linear[i]]= ColorFromPalette(Pal, colorIndex[i], sinBeat);  //controlling Brightness with sinBeat and assigning each LED with a color from the Palette
  }

}

int update_start(int start)        //Update start indices of the linear row
{
  int inc = 2;
  if (start < linear_size - inc)
  {
    start++;
  }
  else
  {
    start = 0;
  }
  return start;
}

